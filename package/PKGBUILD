# Maintainer: Rodion Bozhenko <rodion.bozhenko@tutanota.com>

pkgname="oxyclock"
pkgver=1.0.0
pkgrel=1
pkgdesc="A simple timer app written in Rust with Iced"
arch=("x86_64")
url="https://github.com/Rodion-Bozhenko/oxyclock.git"
license=(GPL)
depends=(
  "gcc-libs"
  "alsa-lib"
)
makedepends=(
  "cargo"
  "just"
  "git"
)
source=("oxyclock::git://github.com/Rodion-Bozhenko/oxyclock.git")
sha256sums=("SKIP")

pkgver() {
  cd "$pkgname"
  git decribe --tags
}

build() {
	cd "$pkgname$"
  just
}

package() {
	cd "$pkgname"
	make rootdir="{$pkgdir}" install
}
